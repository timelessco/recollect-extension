{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"ignorePatterns": ["src/components/ui/**", "CHANGELOG.md"],
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"quoteProps": "as-needed",
	"jsxSingleQuote": false,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"endOfLine": "lf",
	"experimentalSortPackageJson": {
		"sortScripts": true
	},
	"experimentalSortImports": {
		"ignoreCase": true,
		"newlinesBetween": true,
		"order": "asc",
		"groups": [
			["side-effect"],
			["builtin"],
			["^react$", "^react-dom$"],
			["external", "external-type"],
			["internal", "internal-type"],
			["parent", "parent-type"],
			["sibling", "sibling-type"],
			["index", "index-type"]
		]
	}
}
