{
  "name": "recollect-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Recollect monorepo",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "pnpm npm-check-updates --deep -u",
    "check": "ultracite check",
    "dev": "turbo run dev",
    "fix": "ultracite fix",
    "prepare": "husky",
    "release": "pnpm build && pnpm --filter recollect-extension zip",
    "test": "true",
    "version": "changeset version"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "husky": "9.1.7",
    "knip": "5.82.1",
    "lint-staged": "16.2.7",
    "turbo": "2.8.0",
    "ultracite": "7.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "packageManager": "pnpm@10.28.2"
}
